<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill">
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <corners android:radius="@dimen/appintro_spotlight_image_corner_radius" />
            <size
                android:width="@dimen/appintro_spotlight_image_background_size"
                android:height="@dimen/appintro_spotlight_image_background_size" />
            <gradient
                android:centerColor="#FF000000"
                android:centerX="0"
                android:centerY="1"
                android:gradientRadius="285dp"
                android:startColor="#00000000"
                android:type="radial"
                android:useLevel="false" />
        </shape>
    </item>
    <item android:gravity="bottom|left">
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <corners
                android:bottomLeftRadius="@dimen/appintro_spotlight_image_corner_radius"
                android:topRightRadius="@dimen/appintro_spotlight_image_arc_outer_radius" />
            <size
                android:width="@dimen/appintro_spotlight_image_arc_outer_radius"
                android:height="@dimen/appintro_spotlight_image_arc_outer_radius" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:gravity="bottom|left">
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <corners
                android:bottomLeftRadius="@dimen/appintro_spotlight_image_corner_radius"
                android:topRightRadius="@dimen/appintro_spotlight_image_arc_inner_radius" />
            <size
                android:width="@dimen/appintro_spotlight_image_arc_inner_radius"
                android:height="@dimen/appintro_spotlight_image_arc_inner_radius" />
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>
</layer-list>