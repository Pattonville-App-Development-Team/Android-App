<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/text_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_top"
        android:layout_margin="8dp"
        android:textAppearance="?attr/textAppearanceListItemSmall" />

    <ToggleButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@id/text_top"
        android:layout_alignRight="@id/text_top"
        android:layout_centerVertical="true"
        android:background="@drawable/pin_tilted"
        android:backgroundTint="@android:color/darker_gray"
        android:contentDescription="Pin"
        android:textOff=""
        android:textOn="" />
</RelativeLayout>