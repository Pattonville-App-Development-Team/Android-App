<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_list_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ToggleButton
        android:id="@+id/pinned_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:background="@drawable/button_pinned"
        android:contentDescription="Pin"
        android:textOff=""
        android:textOn="" />

    <TextView
        android:id="@+id/text_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/pinned_button"
        android:layout_toStartOf="@id/pinned_button"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/text_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_top"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@id/pinned_button"
        android:layout_toStartOf="@id/pinned_button"
        android:textAppearance="?attr/textAppearanceListItemSmall" />
</RelativeLayout>