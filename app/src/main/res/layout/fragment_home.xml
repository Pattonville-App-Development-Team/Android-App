<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="org.pattonvillecs.pattonvilleapp.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:fillColor="@color/colorAccent"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:snap="true"
            app:strokeColor="#FF777777"
            app:strokeWidth="2dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_news_header"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/home_news_header_text"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recent_news_see_more_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical|end"
                android:text="@string/see_more"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/home_recent_news_see_more_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:paddingEnd="8dp"
                android:paddingStart="4dp"
                android:src="@drawable/ic_arrow_forward_white_18dp" />


        </LinearLayout>


        <ListView
            android:id="@+id/home_news_listview"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:nestedScrollingEnabled="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/upcoming_events_header"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/home_upcoming_events_header_text"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_upcoming_events_see_more_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical|end"
                android:text="@string/see_more"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/home_upcoming_events_see_more_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:paddingEnd="8dp"
                android:paddingStart="4dp"
                android:src="@drawable/ic_arrow_forward_white_18dp" />
        </LinearLayout>


        <ListView
            android:id="@+id/home_upcoming_events_listview"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:nestedScrollingEnabled="false" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pinned_events_header"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/home_pinned_events_header_text"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/home_pinned_events_see_more_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:text="@string/see_more"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/home_pinned_events_see_more_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:paddingEnd="8dp"
                android:paddingStart="4dp"
                android:src="@drawable/ic_arrow_forward_white_18dp" />


        </LinearLayout>

        <ListView
            android:id="@+id/home_pinned_events_listview"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
