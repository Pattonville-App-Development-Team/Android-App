<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="org.pattonvillecs.pattonvilleapp.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:animateOnBoundary="true"
            app:fillColor="@color/colorAccent"
            app:pageColor="@android:color/transparent"
            app:pageTransformInterval="3000"
            app:radius="6dp"
            app:slideInterval="5000"
            app:snap="true"
            app:strokeColor="@android:color/secondary_text_light"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:id="@+id/home_news_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_news_header"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:text="@string/home_news_header_text"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/recent_news_see_more_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:drawableEnd="@drawable/ic_arrow_forward_white_18dp"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_arrow_forward_white_18dp"
                android:gravity="center_vertical|end"
                android:padding="8dp"
                android:text="@string/see_more"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_news_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/home_events_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/upcoming_events_header"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:text="@string/home_upcoming_events_header_text"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_upcoming_events_see_more_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_arrow_forward_white_18dp"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_arrow_forward_white_18dp"
                android:gravity="center_vertical|end"
                android:padding="8dp"
                android:text="@string/see_more"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_calendar_event_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/home_pinned_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pinned_events_header"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:text="@string/home_pinned_events_header_text"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_pinned_events_see_more_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:drawableEnd="@drawable/ic_arrow_forward_white_18dp"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_arrow_forward_white_18dp"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="@string/see_more"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_calendar_pinned_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/home_no_items_shown_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:text="@string/zero_home_items_selected_textview"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
