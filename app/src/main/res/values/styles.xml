<resources>

    <!-- Base application theme. -->
    <style name="PSD" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="PSD.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PSD.PreferenceFixTheme.NoActionBar" parent="PreferenceFixTheme.Light.NoActionBar" />

    <style name="PSD.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PSD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
