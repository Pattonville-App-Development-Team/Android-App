<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.pattonvillecs.pattonvilleapp.fragments.calendar.CalendarMonthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <org.pattonvillecs.pattonvilleapp.fragments.calendar.fix.FixedMaterialCalendarView
            android:id="@+id/calendar_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:outlineProvider="bounds"
            app:mcv_dateTextAppearance="@style/PSD.Calendar.Date" />

        <org.pattonvillecs.pattonvilleapp.fragments.calendar.MaxHeightListView
            android:id="@+id/list_view_calendar"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:animateLayoutChanges="true"
            android:scrollbars="none"
            tools:listitem="@layout/dateless_event_list_item" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>