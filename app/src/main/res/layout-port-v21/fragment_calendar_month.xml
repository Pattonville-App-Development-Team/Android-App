<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fadeScrollbars="false"
    android:overScrollMode="always"
    android:scrollbars="vertical"
    tools:context="org.pattonvillecs.pattonvilleapp.calendar.CalendarMonthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <org.pattonvillecs.pattonvilleapp.calendar.fix.FixedMaterialCalendarView
            android:id="@+id/calendar_calendar"
            style="PSD.MaterialCalendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mcv_selectionColor="@android:color/darker_gray"
            app:mcv_showOtherDates="other_months|decorated_disabled"
            app:mcv_tileHeight="40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:background="?android:attr/dividerHorizontal" />

        <include
            layout="@layout/calendar_event_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>