<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Preferences">

    <PreferenceCategory android:title="General">

        <MultiSelectListPreference
            android:entries="@array/schools"
            android:entryValues="@array/schools"
            android:key="@string/key_school_selection"
            android:summary="Select schools to recieve information from"
            android:title="Select Schools">

        </MultiSelectListPreference>

        <CheckBoxPreference
            android:defaultValue="0"
            android:key="@string/key_powerschool_intent"
            android:summary="Switch between a browser view or app"
            android:title="Use PowerSchool App">

        </CheckBoxPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="Home"></PreferenceCategory>

    <PreferenceCategory android:title="News"></PreferenceCategory>

    <PreferenceCategory android:title="Calendar"></PreferenceCategory>

    <PreferenceCategory android:title="Directory"></PreferenceCategory>

</PreferenceScreen>