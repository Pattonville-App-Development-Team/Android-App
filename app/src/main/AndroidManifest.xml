<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pattonvillecs.pattonvilleapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pirate_pete_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/PSD">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/PSD.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".fragments.calendar.CalendarEventDetailsActivity"
            android:label="@string/title_activity_calendar_event_details"
            android:parentActivityName=".MainActivity"
            android:theme="@style/PSD.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.pattonvillecs.pattonvilleapp.MainActivity" />
        </activity>
    </application>

</manifest>