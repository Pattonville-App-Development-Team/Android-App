<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pattonvillecs.pattonvilleapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PattonvilleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/psd_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/PSD">
        <provider
            android:name=".fragments.calendar.pinned.PinnedEventsContentProvider"
            android:authorities="org.pattonvillecs.pattonvilleapp.fragments.calendar.pinned"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/PSD.NoActionBar.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.powerschool.portal" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".intro.PattonvilleAppIntro"
            android:label="@string/app_intro"
            android:theme="@style/PSD.PreferenceFixTheme.NoActionBar" />
        <activity
            android:name=".preferences.SettingsActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/PSD" />
        <activity
            android:name=".fragments.calendar.CalendarEventDetailsActivity"
            android:label="@string/title_activity_calendar_event_details"
            android:parentActivityName=".MainActivity"
            android:theme="@style/PSD">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.pattonvillecs.pattonvilleapp.MainActivity" />
        </activity>
        <activity
            android:name=".news.NewsDetailActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/PSD.NoActionBar" />
        <activity
            android:name=".fragments.directory.DirectoryDetailActivity"
            android:parentActivityName=".MainActivity" />

        <service android:name=".firebase.FBNotificationsService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".firebase.FBInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".PowerschoolActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SchoolListActivity"
            android:parentActivityName=".MainActivity" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/notification_icon" />

    </application>

</manifest>